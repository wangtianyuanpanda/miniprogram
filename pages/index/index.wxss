/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.background-image {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    /* filter: alpha(opacity=30); */
    -moz-opacity:0.85;
    opacity:0.85;
}
.main-container {
    position: relative;
}

.main-title {
    font-weight: 400;
    font-size: 66rpx;
    color: #fff;
    font-family: Wawati SC;
}

.enter-con {
    text-align: center;
    margin-top: 350rpx;
}

.city-con {
    height: 100%;
    width: 100%;
    background-color: #fff;
}
.i-index-demo {
    width:100%;
    height:100%;
    position: absolute;
    top: 0rpx;
    background-color: #fff;

}
.i-index-demo-item{
    padding:10px;
    border-bottom:#ddd solid 1rpx;
    font-size:14px;
}

.float-btn {
    position:absolute;
    text-align: center;
    right:20rpx;
    bottom:20rpx;
    width:70rpx;
    height:70rpx;
    border-radius: 50%;
    background-color: #dddee1;
    box-shadow: 2rpx 2rpx 2rpx #dddee1;
}

.author-con {
    font-weight: 400;
    font-size: 36rpx;
    color: #fff;
    font-family: Wawati SC;
    margin-top: 150rpx;
    text-align: center;

}